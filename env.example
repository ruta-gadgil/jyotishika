# Flask Configuration
FLASK_ENV=development
PORT=8080

# Ephemeris Data Path
# Path to the directory containing ephemeris files (e.g., sepl_18.se1)
EPHE_PATH=./ephe

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Use "*" for development, specify domains for production
ALLOWED_ORIGINS=*

# Database Configuration
# Supabase PostgreSQL connection string (REQUIRED for authorization)
# Get from Supabase Project Settings > Database > Connection String
# Format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://user:password@db.xxxxx.supabase.co:5432/postgres

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration (for production)
SECRET_KEY=your-secret-key-here-change-in-production
# JWT_SECRET_KEY=your-jwt-secret-key-here

# Sessions: set USE_DYNAMODB_SESSIONS=true only in Lambda/production
# For local dev leave unset or false to use in-memory sessions (no AWS DynamoDB)
# USE_DYNAMODB_SESSIONS=false

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
# Create OAuth 2.0 Client ID credentials for a web application
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
APP_BASE_URL=http://localhost:8000
FRONTEND_BASE_URL=http://localhost:3000

# External API Keys (if needed)
# API_KEY=your-api-key-here

# Development/Testing
DEBUG=True
TESTING=False
